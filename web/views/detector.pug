extends layout

block content
  .page-header
    h3 Disease Detector

  form.form-horizontal(method='POST', enctype='multipart/form-data')
    //- input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='image') X-ray Image File
      .col-sm-8
        input.form-control(type='file', name='image', id='image', autofocus=true)
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit')
          i.fa.fa-envelope
          | Send
